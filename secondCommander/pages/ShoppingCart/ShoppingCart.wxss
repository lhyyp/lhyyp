/* pages/ShoppingCart/ShoppingCart.wxss */
.qualityList{
  overflow: hidden;
  background: #f5f5f5;
  box-sizing: border-box;
}
.notfind image{
  display: block;
  width: 300rpx;
  height: 300rpx;
  margin: 50rpx auto 0;
}
.notfind view{
  text-align: center;
  font-size: 28rpx;
}
.item{
  display: flex;
  border-bottom: 1px solid #8a8a8a;
  background: #fff;
  padding: 20rpx;
  line-height: 60rpx;
}
.item .checkbox{
  display: flex;
  align-content: center;
  justify-content: center;
  margin-left: 10rpx;
}
.item .right{
  flex:1;
  font-size: 28rpx;
  padding-left: 30rpx;
}
.item .right .third{
  display: flex;
  line-height: 40rpx; 
}
.item .right .btn{
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background: grey;
  display: flex;
  align-content: center;
  justify-content: center;
}
.item .right .third .number{
  width: 100rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  border: 1px solid #8a8a8a;
  border-radius: 40rpx;
  margin: 0 10rpx;
}
.item .second{
  display: flex;
  justify-content:space-between;
  line-height: 40rpx; 
}