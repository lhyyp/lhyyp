/* pages/product/product.wxss */
.qualityList{
  overflow: hidden;
  background: #f5f5f5;
  padding: 20rpx 0 20rpx 20rpx;
  box-sizing: border-box;
}
.qualityItem{
  width: 345rpx;
  float:left;
  margin-right: 20rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  background: #ffffff;
  padding: 20rpx 0;
}
.qualityItem image{
  width: 300rpx;
  height: 300rpx;
  display: block;
  margin: 0 auto;
}
.qualityItem view{
  margin: 0 auto;
  width:300rpx;  
}
.qualityItem .text{
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 30rpx;
  font-size: 24rpx; 
}
.notfind image{
  display: block;
  width: 300rpx;
  height: 300rpx;
  margin: 50rpx auto 0;
}
.notfind view{
  text-align: center;
  font-size: 28rpx;
}